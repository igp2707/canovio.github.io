---
import arrow from '../assets/arrow-72.png'

import "@splidejs/splide/css"
import { Splide, SplideTrack, SplideSlide } from "astro-splide";

const options = {
    type: "loop",
    perPage: 3,
    perMove: 1,
    autoplay: true,
    interval: 2000,
    pagination: false,
    arrows: false,
    gap: "1rem",
    breakpoints: {
        640: {
            perPage: 1,
        },
        768: {
            perPage: 2,
        },
    },
}

const works = [
    { 
        src: '/images/category/acp/1.jpeg',
        url: 'acp' 
    },
    { 
        src: '/images/category/aluminium/1.jpeg',
        url: 'aluminium' 
    },
    { 
        src: '/images/category/dinding/1.jpeg',
        url: 'dinding' 
    },
    { 
        src: '/images/category/kamar-mandi/1.jpeg',
        url: 'kaca' 
    },
    { 
        src: '/images/category/kanopi/1.jpeg',
        url: 'kanopi' 
    },
    { 
        src: '/images/category/lantai/1.jpeg',
        url: 'lantai' 
    },
    { 
        src: '/images/category/pintu-frameless/2.jpeg',
        url: 'pintu' 
    },
    { 
        src: '/images/category/railing/2.jpeg',
        url: 'railing' 
    },
    { 
        src: '/images/category/top-table/1.jpeg',
        url: 'table' 
    },
]
